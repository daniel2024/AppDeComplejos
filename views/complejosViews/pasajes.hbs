
<div class="row">&nbsp;</div>
<div class="row">&nbsp;</div>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card">

            <div class="card-body">
                
                                  <center><h3><b>Tranformación</b></h3></center>              
<br>

                <form name="form" action="/tranformar" method="POST">

                    <div class="form-group">
                        <select name="tranformacion" id="tranformacion" class="form-control col-md-12" onchange="displayOnOff()"  >
                            <option value="polar">Binomica a Polar</option>
                            <option value="binomica">Polar a Binomica</option>
                        </select>
                    </div>
                

                    <div id="div_binomica" class="form-group">
                        Binomica: (<input style="text-align: right" size="4" type="text" id="real" name="real" placeholder="a" pattern="-?[0-9]+(\.[0-9]+)?"  title="Ingrese un número entero o decimal. Sin separador de miles y con el (.) como separador decimal." />

                        ,<input style="text-align: right" size="4" type="text" id="imag" name="imag" placeholder="b" pattern="-?[0-9]+(\.[0-9]+)?" title="Ingrese un número entero o decimal. Sin separador de miles y con el (.) como separador decimal." /> )

                    </div>
                    <div id="div_polar" class="form-group" >
                        Polar: [<input style="text-align: right" size="4" type="text" id="mod" name="mod" placeholder="mod" pattern="-?[0-9]+(\.[0-9]+)?" title="Ingrese un número entero o decimal. Sin separador de miles y con el (.) como separador decimal." />

                        ;<input style="text-align: right" size="4" type="text" id="angle" name="angle" placeholder="arg" pattern="-?[0-9]+(\.[0-9]+)?" title="Ingrese un número entero o decimal. Sin separador de miles y con el (.) como separador decimal." /> &Pi;]
                    </div>
                        <div>
                            <button type="submit" class="btn btn-success btn-block">
                                Tranformar
                            </button>

                        </div>

                </form>



            </div>

        </div>

    </div>


</div>

<script>
function displayOnOff(){
    if(document.form.tranformacion.value == 'polar'){
        document.getElementById('div_polar').classList.add('d-none');
        document.getElementById('div_binomica').classList.remove('d-none');
        document.getElementById('real').setAttribute("required",true);
        document.getElementById('imag').setAttribute("required",true);
        document.getElementById('mod').removeAttribute("required",true);
        document.getElementById('angle').removeAttribute("required",true);
        document.getElementById('mod').value = null;
        document.getElementById('angle').value = null;
    }else{
        document.getElementById('div_binomica').classList.add('d-none');
        document.getElementById('div_polar').classList.remove('d-none');
        document.getElementById('real').removeAttribute("required",true);
        document.getElementById('imag').removeAttribute("required",true);
        document.getElementById('real').value = null;
        document.getElementById('imag').value = null;
        document.getElementById('mod').setAttribute("required",true);
        document.getElementById('angle').setAttribute("required",true);
    }
}

displayOnOff();
</script>