<script>
function displayOnOff_z1(){
    if(document.form.forma_z1.value == 'polar'){
        document.getElementById('div_polar_z1').classList.add('d-none');
        document.getElementById('div_binomica_z1').classList.remove('d-none');
    }else{
        document.getElementById('div_binomica_z1').classList.add('d-none');
        document.getElementById('div_polar_z1').classList.remove('d-none');
    }
}

function displayOnOff_z2(){
