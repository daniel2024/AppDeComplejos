<script>
function displayOnOff_z1(){
    if(document.form.forma_z1.value == 'binomica'){
        document.getElementById('div_polar_z1').classList.add('d-none');
        document.getElementById('div_binomica_z1').classList.remove('d-none');
    }else{
        document.getElementById('div_binomica_z1').classList.add('d-none');
        document.getElementById('div_polar_z1').classList.remove('d-none');
    }
}

function displayOnOff_z2(){
    if(document.form.forma_z2.value == 'binomica'){
        document.getElementById('div_polar_z2').classList.add('d-none');
        document.getElementById('div_binomica_z2').classList.remove('d-none');
    }else{
        document.getElementById('div_binomica_z2').classList.add('d-none');
        document.getElementById('div_polar_z2').classList.remove('d-none');
    }
}

function div_por_cero(){

    if(document.getElementById('operacion').value == 'cociente'){
        if(document.form.forma_z2.value == 'polar'){
            if(document.getElementById('mod_z2').value === '0'){
                alert('No puede dividir por cero');
                document.getElementById('mod_z2').value = null;
            }
        }else{
            if(document.getElementById('real_z2').value === '0' && document.getElementById('imaginario_z2').value === '0'){
                alert('No puede dividir por cero');
                document.getElementById('real_z2').value = null;
                document.getElementById('imaginario_z2').value = null;
            }
        }
    }
}

displayOnOff_z2();
displayOnOff_z1();
</script>
