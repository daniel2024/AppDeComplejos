function div_por_cero(){

    if(document.getElementById('operacion').value == 'cociente'){
        if(document.form.forma_z2.value == 'polar'){
            if(document.getElementById('mod_z2').value === '0'){
                alert('No puede dividir por cero');
                document.getElementById('mod_z2').value = null;
            }
        }else{
            if(document.getElementById('real_z2').value === '0' && document.getElementById('imaginario_z2').value === '0'){
                alert('No puede dividir por cero');
                document.getElementById('real_z2').value = null;
                document.getElementById('imaginario_z2').value = null;
            }
        }
    }
}

