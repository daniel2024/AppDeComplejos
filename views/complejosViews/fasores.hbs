<script>
function displayOnOff_z1(){
    if(document.form.forma_z1.value == 'binomica'){
        document.getElementById('div_polar_z1').classList.add('d-none');
        document.getElementById('real_z1').setAttribute("required",true);
        document.getElementById('imaginario_z1').setAttribute("required",true); 
        
        document.getElementById('div_binomica_z1').classList.remove('d-none');
        document.getElementById('mod_z1').removeAttribute("required",true);
        document.getElementById('angle_z1').removeAttribute("required",true); 
        document.getElementById('mod_z1').value = null;
        document.getElementById('angle_z1').value = null;
    }else{
        document.getElementById('div_binomica_z1').classList.add('d-none');
        document.getElementById('real_z1').removeAttribute("required",true);
        document.getElementById('imaginario_z1').removeAttribute("required",true); 
        document.getElementById('real_z1').value = null;
        document.getElementById('imaginario_z1').value = null;

        document.getElementById('div_polar_z1').classList.remove('d-none');
        document.getElementById('mod_z1').setAttribute("required",true);
        document.getElementById('angle_z1').setAttribute("required",true);
    }
}

